<Window x:Class="GroupPrject.Items.ItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupPrject.Items"
        Closing="WindowClosing"
        mc:Ignorable="d"
        Title="ItemsWindow" Height="450" Width="800">
    <Canvas Background="#4c6444">
        <DataGrid x:Name="dgItems" Height="246" Canvas.Left="51" Canvas.Top="31" Width="327" Background="#FFCABA9C" CanUserAddRows="False"/>
        <Button x:Name="btnAddItem" Content="Add Item" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnAddItem_Click" Canvas.Left="451" Canvas.Top="217" Width="75" Height="25"/>
        <Button x:Name="btnEditItem" Content="Edit Item" HorizontalAlignment="Left" Margin="451,257,0,0" VerticalAlignment="Top" Width="75" Click="btnEditItem_Click" Height="25"/>
        <Button x:Name="btnDeleteItem" Content="Delete Item" HorizontalAlignment="Center" VerticalAlignment="Center" Click="buttonDeleteItem_Click" Canvas.Left="542" Canvas.Top="217" Width="75" Height="25"/>
        <Button x:Name="btnSaveItem" Content="Save Item" HorizontalAlignment="Left" Margin="542,257,0,0" VerticalAlignment="Top" Width="75" Click="SaveItem" Height="25"/>
        <Label x:Name="lblCode" Content="Code:" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFCABA9C" Canvas.Left="459" Canvas.Top="31" Width="73"/>
        <Label x:Name="lblCost" Content="Cost:" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFCABA9C" Canvas.Left="459" Canvas.Top="62" Width="73"/>
        <Label x:Name="lblDesc" Content="Description:" HorizontalAlignment="Left" Margin="459,93,0,0" VerticalAlignment="Top" Background="#FFCABA9C"/>
        <TextBox x:Name="txtCode" TextWrapping="Wrap" Text="" Width="120" Margin="542,33,138,379"/>
        <TextBox x:Name="txtCost" TextWrapping="Wrap" Text="" Width="120" Margin="542,66,138,346"/>
        <TextBox x:Name="txtDesc" TextWrapping="Wrap" Text="" Width="120" Margin="542,97,138,315"/>
    </Canvas>
</Window>
